{
	"compilerOptions": {
		"baseUrl": "./src",
		"checkJs": true,
		"allowUmdGlobalAccess": true,
		"jsx": "react",
		"lib": ["es6", "dom"],
		"noImplicitThis": true,
		"strictNullChecks": true,
		"paths": {
			"components": ["./components"],
			"containers": ["./containers"],
			"contexts": ["./contexts"],
			"hooks": ["./hooks"],
			"helpers": ["./helpers"],
			"images": ["./images"]
		},
		"types": [
			"node",
			"webpack-env"
		]
	},
	"include": ["src"]
}